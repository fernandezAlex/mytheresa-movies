{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",
    "jsx": "react-jsx",
    "lib": ["dom", "es2020"],
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
